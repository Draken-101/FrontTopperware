.FormAdminControlsEntrepreneur
    overflow-y: scroll;
    width: 100%;
    height: calc(100% - 3vw) !important;
    background-color: rgba(255, 247, 243, 1);
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    position: relative;
    h2
        margin-top: 1vw;
        width: 100%;
        text-align: center;
        font-size: 2.5vw;
        color: rgba(87, 0, 155, 0.61);
        font-weight: 500;

.B-Form
    display: flex;
    width: 100%;
    flex-direction: column
    z-index: 5;
    height: 5vw;
    position: sticky;
    bottom: 0;
    background-color: rgb(154, 93, 201);
    button
        border-radius: 0px;
        width:100%;
        height: 100%;
        &:hover{
            filter: drop-shadow(0vw 0.5vw 0vw rgba(0, 0, 0, 0.3)) ;
            transform: translate( 0vw, -.5vw);
        }
    .DeleteBtn
        font-size: 1.5vw
        height: 45%;
    .EditBtn
        height: 55%;

.EditForm
    height: 7vw;