.ConfirmOrder
    width: 100%;
    height: 100vh;
    display: flex;

.Order 
    background-color: rgba(255, 247, 243, 1);
    width: calc(65% - 8vw);
    height: calc(100% - 1vw);
    padding: .5vw 4vw;
    h1{
        width: 100%;
        height: 10%;
        font-size: 4vw;
        display: flex;
        justify-content: center;
        align-items: center;
        color: rgba(87, 0, 155, 0.61);
    }

.ContainerOrderProducts
    width: calc(100% - .30vw);
    height: fit-content;
    max-height: calc(65% - 1vw) ;
    overflow-y: scroll;
    display: flex;
    flex-wrap: wrap;
    padding-bottom: 1vw;
    div{
        margin-top: 1vw;
        border: .15vw solid rgba(136, 0, 139, 0.22);
    }
    div div{
        margin: 0px;
        border: 0px;
    }