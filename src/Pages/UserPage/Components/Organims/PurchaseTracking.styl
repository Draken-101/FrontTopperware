
.Traking
    position: relative
    background-color: rgba(255, 247, 243, 1);
    width: calc(65% - 8vw);
    height: calc(100% - 1vw);
    padding: .5vw 4vw;
    color: rgba(87, 0, 155, 0.61);
    font-size: 2vw
    overflow-y: scroll
    img
        position: relative
        z-index: 0
    button
        width: 30%
        margin: 1vw 35%
    h1{
        width: 100%;
        font-size: 4vw;
        display: flex;
        font-weight: 400
        text-align: center
        letter-spacing: 1vw
        justify-content: center;
        align-items: center;
        color: rgba(87, 0, 155, 0.61);
        margin-bottom: .5vw
    }
    span
        display: flex
        align-items: center
    h2
        font-size: 2vw
        margin: .5vw 0vw
.NumPedido
    width: 100%
    display: flex
    justify-content: space-between
    align-items: center
    height: 4vw
    span:last-child
        padding: 0vw 1vw

.TopHeaderTraking
    z-index: 1
    background-color: rgba(255, 247, 243, 1);
    top: 0
    position: sticky
    display: flex
    flex-direction: column
.IconMargin
    margin: .5vw 0vw
    letter-spacing: .5vw