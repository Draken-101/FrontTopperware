.DataTop1
    display: flex;
    align-items: center;
    width: calc( 100% / 3 );
    height: 100%;
    background-image: url('/assets/Img/FondoProfile.png');
    background-size: cover;
    div
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: .2vw;
        padding: 0vw 1vw;
        label
            width: fit-content;
            color: rgba(255, 247, 243, 1);
            padding: 0.1vw 1vw;
            border-radius: .2vw;

