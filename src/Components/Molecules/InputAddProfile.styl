.BtnInputAddProfile
    width: calc( 100% - 2vw);
    margin: 1vw
    height: fit-content;
    display: flex;
    justify-content: center;
    position: relative;
    overflow: hidden; 
    background-color: transparent;
    div
        z-index: 1;
        border: .1vw solid rgba(87, 0, 155, 0.3);
        background-color: transparent;
        background-repeat: no-repeat;
        background-position: center;
        transition: .3s ease;
        display: flex;
    p
        width: 100%;
        height: 25%;
        z-index: 2
        position: absolute;
        top: 38%
    span
        opacity: 0;
        z-index: 3;
        position: absolute;
        color: rgba(255, 247, 243, 1);
        font-weight: 400;
        font-size: 3vw;
        left: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
        cursor: pointer;
        transform: translate(calc(100% - 2vw), 0%);
.ChangeStyleButton
    &:hover
        p
            background: rgba(88, 0, 155, 0.685);
        div
            filter: blur(.1vw);
        span
            opacity: 1;
            transform: translate(0%, 0%);
